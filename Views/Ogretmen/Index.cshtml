@model IEnumerable<Ogretmen>

<h2>Öğretmen Listesi</h2>
<a  asp-action="Create" class="btn btn-primary">Öğretmen Ekle</a>
<hr>
<table class="table table-bordered">
    <thead>

            <tr>
                <th style="width: 150px;">@Html.DisplayNameFor(m=> m.OgretmenId)</th>
                <th>@Html.DisplayNameFor(m=> m.Ad)</th>
                <th>@Html.DisplayNameFor(m=> m.Soyad)</th>
                <th>@Html.DisplayNameFor(m=> m.BaslamaTarihi)</th>
                <th style="width: 360px;"></th>
            </tr>

    </thead>
    
    <tbody>
           @foreach(var item in Model)
           {
            <tr>
                    <td>@Html.DisplayFor(modelItem=>item.OgretmenId)</td>
                    <td>@Html.DisplayFor(modelItem=>item.Ad)</td>
                    <td>@Html.DisplayFor(modelItem=>item.Soyad)</td>
                    <td>@Html.DisplayFor(modelItem=>item.BaslamaTarihi)</td>
                    <td>
                        <a asp-controller="Ogretmen" asp-action="Edit" asp-route-id="@item.OgretmenId" class="btn btn-sm btn-primary">Bilgileri Güncelle</a>
                        <a asp-controller="Ogretmen" asp-action="Delete" asp-route-id="@item.OgretmenId" class="btn btn-sm btn-danger">Öğretmeni Sil</a>
                        <a asp-controller="Ogretmen" asp-action="Detail" asp-route-id="@item.OgretmenId" class="btn btn-sm btn-danger"> Verdiği Kurslar</a>
                    </td>
            </tr>
           }
    </tbody>
</table>